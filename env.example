# Ford Fleet Management Demo - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# SingleStore Connection
# =============================================================================
# For local development with SingleStore running on host:
SINGLESTORE_HOST=host.docker.internal
SINGLESTORE_PORT=3306
SINGLESTORE_DATABASE=ford_fleet

# For SingleStore Helios:
# SINGLESTORE_HOST=your-workspace.svc.singlestore.com
# SINGLESTORE_PORT=3306

# =============================================================================
# Database Users (created in security.sql)
# =============================================================================
DB_ADMIN_USER=demo_admin
DB_ADMIN_PASSWORD=AdminPass123!

DB_TERRITORY_MANAGER_USER=territory_manager_1
DB_TERRITORY_MANAGER_PASSWORD=TerritoryPass123!

DB_REGIONAL_MANAGER_USER=regional_manager_1
DB_REGIONAL_MANAGER_PASSWORD=RegionalPass123!

DB_INGEST_USER=ingest_user
DB_INGEST_PASSWORD=IngestPass123!

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# AI Configuration (SingleStore AI Endpoint)
# =============================================================================
# Get your API key from SingleStore portal
MODEL_API_AUTH=your-singlestore-ai-api-key
MODEL_NAME=claude-sonnet-4-5-79066
MODEL_API_ENDPOINT=https://ai.us-east-1.cloud.singlestore.com/5cc87edb-3e18-48f8-bef9-6097eb8fcab6/v1

# =============================================================================
# Kafka/Redpanda Configuration
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=redpanda:29092
EVENTS_PER_SECOND=10
ANOMALY_PROBABILITY=0.02

# =============================================================================
# Consumer Configuration
# =============================================================================
BATCH_SIZE=100
BATCH_TIMEOUT=1.0

